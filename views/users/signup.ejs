<% layout("/layouts/boilerplate") %>
<div class="row mt-3">  
    <div class="col-4 offset-4">
        <h3 style="text-align: center;">Signup Form</h3>
    </div>
    <div class="col-6 offset-3">
 
      <form method="POST" action="/signup" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input id="username" name="username" placeholder="enter username" type="text" class="form-control" required/>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input id="email" name="email" placeholder="enter email" type="email" class="form-control" required/>
            <div class="invalid-feedback">Enter valid email</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" name="password" placeholder="enter email" type="password" class="form-control" required/>
        </div>
        <button class="mb-3 btn btn-success">Signup</button>
      </form>
</div>
</div>
    