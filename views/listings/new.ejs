      </div>
   
      <!-- <br /><br /> -->
     
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea 
        name="listing[description]"
        placeholder="enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">Enter proper description</div>
      </div>
